<div class="row mt-2">
    <div class="col">
        <h5 style="margin-bottom:0px">@Record.DisplayName</h5>
    </div>
</div>
<div class="row mb-2">
    <div class="col-10">
        <div class="form-group bmd-form-group">
            <label class="bmd-label-floating">@Record.Description</label>
        </div>
    </div>
    <div class="col-2">
        <div class="form-group bmd-form-group">
            @if (this.Value)
            {
                <button class="btn btn-sm btn-success" @onclick="() => this.OnValueChanged?.Invoke(this.Record.Parameter, !this.Value)">Enabled</button>
            }
            else
            {
                <button class="btn btn-sm btn-danger" @onclick="() => this.OnValueChanged?.Invoke(this.Record.Parameter, !this.Value)">Disabled</button>
            }
        </div>
    </div>
</div>

@functions
{
    [Parameter]
    public bool Value { get; set; }

    [Parameter]
    public ApiRecord Record { get; set; }

    [Parameter]
    public Action<ApiParameter, bool> OnValueChanged { get; set; }
}